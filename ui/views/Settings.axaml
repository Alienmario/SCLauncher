<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:custom="clr-namespace:SCLauncher.ui.controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SCLauncher.ui.views.Settings">
	
	<Grid Margin="5" 
	      ColumnDefinitions="*"
	      RowDefinitions="Auto, Auto, Auto, Auto">
		
		<Label Grid.Row="0"
		       Content="Game path"
		       VerticalAlignment="Center" HorizontalAlignment="Left"/>
		<custom:FilePickerTextBox Grid.Row="1" Margin="0 5"
		                          Mode="Folder" Title="Select game path"
		                          Name="GamePath"/>
		
		<Label Grid.Row="2"
		       Content="Server path"
		       VerticalAlignment="Center" HorizontalAlignment="Left"
		       Margin="0 10 0 0"/>
		<custom:FilePickerTextBox Grid.Row="3" Margin="0 5"
		                          Mode="Folder" Title="Select server path"
		                          Name="ServerPath"/>
	</Grid>
	
</UserControl>
