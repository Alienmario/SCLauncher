<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="SCLauncher.ui.views.serverbrowser.ServerPasswordDialog"
        Width="300" Height="110"
        CanResize="False" WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Background="{StaticResource WindowBackground}"
        Title="Password required">
	
	<DockPanel Margin="10 15">
		<TextBox DockPanel.Dock="Top" HorizontalContentAlignment="Center"
		         Name="PasswordTextBox"
		         Watermark="Server Password"/>
		<Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom"
		        Content="Connect"
		        Classes="accent"
		        HotKey="Enter"
		        Click="ConnectClicked"/>
	</DockPanel>
	
</Window>
