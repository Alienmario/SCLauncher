<controls:BaseDialogWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SCLauncher.ui.controls"
        mc:Ignorable="d"
        x:Class="SCLauncher.ui.views.serverbrowser.ServerPasswordDialog"
        CanResize="False"
        Width="300" Height="125"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner">
	
	<controls:BaseDialogWindow.MainContent>
		<StackPanel Margin="10 15">
			<TextBox HorizontalContentAlignment="Center"
			         Name="PasswordTextBox"
			         Watermark="Server Password"/>
		</StackPanel>
	</controls:BaseDialogWindow.MainContent>
	
	<controls:BaseDialogWindow.FooterContent>
		<DockPanel Margin="10 15">
			<Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom"
			        Content="Connect"
			        Classes="accent"
			        HotKey="Enter"
			        Click="ConnectClicked"/>
		</DockPanel>
	</controls:BaseDialogWindow.FooterContent>
	
</controls:BaseDialogWindow>
